---
import { GitHub, X } from '@/components/icons/index.astro';
import ThemeToggler from '@/components/ThemeToggler.astro';
const mail = 'sherqo@sherqo.me';
---

<footer class="pb-safe w-full border-t">
  <div class="mx-auto flex max-w-3xl items-center justify-between p-4">
    {/* Email */}
    <a href={`mailto:${mail}`} class="text-foreground hover:text-primary text-base">
      {mail}
    </a>

    {/* Icons */}
    <div class="flex items-center gap-4">
      <a href="/github" target="_blank" rel="noopener noreferrer" aria-label="Sharqawy GitHub profile">
        <GitHub />
      </a>
      <a href="/x" target="_blank" rel="noopener noreferrer" aria-label="Sharqawy X profile">
        <X />
      </a>
      <div class="bg-border h-6 w-px"></div>
      <ThemeToggler />
    </div>
  </div>
</footer>
