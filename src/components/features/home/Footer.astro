---
import { GitHub, X } from '@/components/icons/index.astro';
import ThemeToggler from '@/components/ui/ThemeToggler.astro';
const mail = 'sharqawycs@gmail.com';
---

<footer class="pb-safe w-full border-t">
  <div class="mx-auto flex max-w-3xl items-center justify-between p-4">
    {/* Email */}
    <a href={`mailto:${mail}`} class="text-foreground hover:text-primary text-sm no-underline">
      {mail}
    </a>

    {/* Icons */}
    <div class="flex items-center gap-4 sm:gap-6">
      <a href="https://github.com/sherqo" target="_blank" rel="noopener noreferrer" aria-label="Sharqawy GitHub profile">
        <GitHub />
      </a>
      <a href="https://x.com/sharqawycs" target="_blank" rel="noopener noreferrer" aria-label="Sharqawy X profile">
        <X />
      </a>
      <ThemeToggler />
    </div>
  </div>
</footer>
